{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/*": ["./src/app/*"],
      "@config/*": ["./src/config/*"],
      "@constant/*": ["./src/constant/*"],
      "@decorator/*": ["./src/decorator/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@type/*": ["./src/type/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts"]
}
